@import './px2rem.styl'

row($height = 44, $leftPer = 30%, $outterPadding = 12, $innerPadding = 0) {
  display: block;
  width: 100%;
  font-size: 0;
  padding: 0 px2rem($outterPadding);
  box-sizing: border-box;
  
  &>.left, &>.right{
     display: inline-block;
     height: px2rem($height);
     line-height: px2rem($height);
     font-size: px2rem(13);
     box-sizing: border-box;
  }
  &>.left{
    width: $leftPer;
    padding-left: px2rem($innerPadding)
  }
  &>.right{
    width: 100% - $leftPer;
    text-align: right;
    padding-right: px2rem($innerPadding)
  }
}